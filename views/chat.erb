<div id="application">
  <div id="messagesContainer"> 
    <span id="roomNumber">Sala No. <%= @chat.id %></span>
    <ul id="messages">
      <li class="message" id=<%= "#{@chat.messages.last.id || 0}" %>>
        <span class="datetime"><%= Time.now %></span><br />
        <span class="from">Chat:</span>
        <span class="messageBody">Bienvenido al Chat! <%= get_img_tag_for "(welcome)" %></span>
      </li> 
    </ul>
  </div>
  <span class="userListTitle">Personas Conectadas:</span>
  <div id="users"> 
  </div>
  <div id="messageFormContainer">
    <form action="/sendMessage" method="post" accept-charset="utf-8" id="messageForm"> 
      <label for="newMessage">Nuevo Mensaje:</label>
      <input type="text" name="newMessage" value="" id="newMessage"/>
      <input type="submit" value="Enviar" id="sendMessageButton"/>
    </form>
  </div>
  <div id="smileysContainer">
    <% SMILEY_TABLE.each do |k,v| %>
      <span class="smiley"><%= get_img_tag_for k %></span>
    <% end %>
    <br />
    <input type="checkbox" name="soundControl" id="soundControl" checked></input>
    <span class="checkBoxText">Â¿Habilitar Sonido?</span>
  </div>
</div>
<span id="chat_id" style="display:none;"><%= @chat.name %></span>
<script type="text/javascript" language="javascript" charset="utf-8">
  Chat.initialize()
</script>
